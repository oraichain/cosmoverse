{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "esModuleInterop": true
    }
}